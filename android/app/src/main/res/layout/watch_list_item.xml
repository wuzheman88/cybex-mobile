<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:autofit="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginLeft="12dp"
        android:layout_marginRight="12dp"
        android:elevation="3dp"
        app:cardBackgroundColor="@color/itemBackground"
        app:cardCornerRadius="4dp"
        app:cardUseCompatPadding="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="@drawable/watch_list_item">

            <ImageView
                android:id="@+id/base_currency_icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/eos"/>

            <TextView
                android:id="@+id/base_currency_watchlist"
                style="@style/white_font_bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@id/base_currency_icon"
                android:layout_alignTop="@id/base_currency_icon"
                android:layout_marginLeft="8dp"
                android:lineSpacingMultiplier="1.50"
                android:text="XRP" />

            <TextView
                android:id="@+id/quote_currency_watchlist"
                style="@style/font_grey"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/base_currency_watchlist"
                android:layout_toEndOf="@id/base_currency_watchlist"
                android:layout_toRightOf="@id/base_currency_watchlist"
                android:lineSpacingMultiplier="1.50"
                android:text="/USD" />


            <me.grantland.widget.AutofitTextView
                android:id="@+id/current_price_watchlist"
                style="@style/white_font_bold"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:maxLines="1"
                android:layout_alignTop="@id/base_currency_watchlist"
                android:layout_marginRight="12dp"
                autofit:autoSizeMinTextSize="8sp"
                android:text="$11,309.109" />

            <TextView
                android:id="@+id/volume"
                style="@style/small_grey_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/base_currency_icon"
                android:layout_below="@id/base_currency_watchlist"
                android:layout_marginTop="2dp"
                android:text="V: 125,980.213 BTC" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignRight="@id/current_price_watchlist"
                android:layout_below="@id/current_price_watchlist"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/change_rate_symbol"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />

                <TextView
                    android:id="@+id/change_rate_watchlist"
                    style="@style/increase"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.67"
                    android:text="+21.35%" />
            </LinearLayout>

            <TextView
                android:id="@+id/highValue"
                style="@style/small_grey_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/volume"
                android:layout_alignStart="@+id/volume"
                android:layout_below="@+id/volume"
                android:layout_marginTop="4dp"
                android:text="H:$11,984.124" />

            <TextView
                android:id="@+id/lowValue"
                style="@style/small_grey_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/highValue"
                android:layout_marginLeft="2dp"
                android:layout_toEndOf="@+id/highValue"
                android:layout_toRightOf="@+id/highValue"
                android:text="L:$10,671.400" />

            <TextView
                android:id="@+id/duration"
                style="@style/small_grey_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@id/lowValue"
                android:layout_alignEnd="@+id/current_price_watchlist"
                android:layout_alignRight="@+id/current_price_watchlist"
                android:text="24h" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>


</LinearLayout>

